      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" } ],
        "url": { "raw": "{{baseUrl}}/showtimes", "host": ["{{baseUrl}}"], "path": ["showtimes"] },
        "body": {
